<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:fontFamily="@font/carter_one"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:paddingRight="10px"
            android:paddingBottom="10px"
            android:text="Zhongshan Road Walking Street"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginLeft="30px"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Description:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Zhongshan Road Walking Street is the centre of Xiamen tourism. This is where many of the tourist and visitors frequently visited and one of the hottest attractions in Xiamen. From some statistics it is to said that it has more than a billion people pass here every year.&#10;&#10;Visit the Zhonghsna Road Walking Street is a very worth experiences and also non-boring. A trip to the street on the day and in the night will serve you two different experiences. The street also contain of many cultures, from western, japanese, to Chinese you can find almost everything you wish for here." />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Interesting facts"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="From statistics over pass few years, it is to be said that there are more than a billion of people pass here every year." />

        <ImageView
            android:id="@+id/ivPictureGingerDuck"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/textView6"
            app:srcCompat="@drawable/zhongshanstreet" />

    </RelativeLayout>
</ScrollView>
