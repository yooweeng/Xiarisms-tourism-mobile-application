<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:fontFamily="@font/carter_one"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:paddingRight="10px"
            android:paddingBottom="10px"
            android:text="Tong'an Fengrou - Tong'an&#10;Steamed Pork"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivPictureTongan"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/textView4"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/tonganfengrou" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPictureTongan"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Description:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDescriptionTongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Tong'an fengrou is a local dish in Xiamen, legend has it that the dish was created to commemorate the appointment of Wang Shenzhi as &quot;Lord of Min&quot; (present-day Fujian) by the imperial court.  It is from a whole piece of streaky pork that has been sprayed with gravy sauce and steamed to produce a great sensation.&#10;&#10;The pork was also cut into large square pieces, wrapped in yellow towels, shaped like a big seal, Tong'an Fengrou came from this. Tong'an is a district in Xiamen, in there, Tong'an Fengrou is like a must-eat dish for the local communities because of its unique flavour. It will be served during occasion, such as celebration for new marriage and moving into new house." />

        <Button
            android:id="@+id/btnDetailTongan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tvDescriptionTongan"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/main_colour"
            android:fontFamily="@font/carter_one"
            android:text="more details ..."
            android:textSize="10sp"
            app:layout_gravity="center_horizontal" />

    </RelativeLayout>
</ScrollView>
