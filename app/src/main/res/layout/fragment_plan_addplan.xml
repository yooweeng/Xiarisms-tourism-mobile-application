<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addplan_background">


    <TextView
        android:id="@+id/tvSelectImgAddPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/carter_one"
        android:text="Select an image&#10;to continue"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvSelectImgAddPlan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:columnCount="3"
        app:rowCount="3">

        <ImageView
            android:id="@+id/ivHakkaAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/hakkaearthbuilding" />

        <ImageView
            android:id="@+id/ivShuzhuangAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/shuzhuanggarden" />

        <ImageView
            android:id="@+id/ivWuyuanwanAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/wuyuanwanwetland" />

        <ImageView
            android:id="@+id/ivZhongshanAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/zhongshanstreet" />

        <ImageView
            android:id="@+id/ivGingerDuckAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/gingerduck" />

        <ImageView
            android:id="@+id/ivTonganAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/tonganfengrou" />

        <ImageView
            android:id="@+id/ivTusundongAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/tusundong" />

        <ImageView
            android:id="@+id/ivYuwantangAddPlan"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/yuwantangmian" />
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>