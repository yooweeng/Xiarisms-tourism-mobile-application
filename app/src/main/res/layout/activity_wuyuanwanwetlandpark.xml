<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:fontFamily="@font/carter_one"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:paddingRight="10px"
            android:paddingBottom="10px"
            android:text="Wuyuanwan Wetland Park"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginLeft="30px"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Description:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="The wetland park is maze of a boardwalk built near the wetlands surrounding by the sea. In Wuyuanwan Wetland Park, the visitors are able to view the beautiful scene along the wetland and also beautiful swans near the habitat. Besides the scene and view, there also are hawkers and stalls selling souvenirs and food to the vistors. The location is recommanded to be visited during night time as the visitor can view the beautiful night scene with sunset and also enjoy their time eating some food and enjoying the scene along the seaside." />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="Interesting facts"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:fontFamily="@font/carter_one"
            android:text="It located near Xiamen Aquatic Park, which is also notable for a visit." />

        <ImageView
            android:id="@+id/ivPictureGingerDuck"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_below="@id/textView6"
            app:srcCompat="@drawable/wuyuanwanwetland" />

    </RelativeLayout>
</ScrollView>
